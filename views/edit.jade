extends layout

block content
    div.header
      h1 The Zine
    div.content
      div.form 
        h1 Edit
        hr
        form(action="/articles/" + allArticles._id + "/delete" method="post")
          label(for='title') Title
          input(type="text" name="title" value=allArticles.title)
          label(for='background') Background Image
          input(type="text" name="background" )
          label(for="dark") Background image has dark colors
          input(type="checkbox" name="dark")
          label(for="excerpt") Excerpt
          textarea( name="excerpt")=allArticles.excerpt
            
          label(for="body") body
          textarea( name="body" )=allArticles.body
          input(type="submit" name="submit" value="Add Article" class="submit")
          input(type="submit" name="delete" value="Delete" class="delete")
