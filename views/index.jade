extends layout

block content
    a(href="/")
      div.header
        h1 The Zine
    div.content
      h2
        a(href="/articles/new") New Article
    div
        
        each article in allArticles.reverse()
          if(article.dark)
            .dark
              .headingDark
                h1
                  a(href="/articles/" + article._id + '/show' )=article.title
                p=article.excerpt
          else
            .light
              .headingLight
                h1
                  a(href="/articles/" + article._id + '/show' )=article.title
              p
                  a(href="/articles/" + article._id + '/show' )=article.excerpt
              
            
